{
  "name": "ai-assisted-landing-page",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma db push && npm run db:seed && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "node scripts/setup-db.js",
    "db:init-prod": "node scripts/init-db-production.js",
    "test:setup": "node scripts/test-setup.js",
    "test:prod": "node scripts/test-production-setup.js",
    "e2e": "npm run test:setup && playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:dev": "powershell -ExecutionPolicy Bypass -File ./scripts/test-dev.ps1",
    "e2e:dev:auth": "powershell -ExecutionPolicy Bypass -File ./scripts/test-dev.ps1 -TestSuite auth -Headed",
    "e2e:dev:blog": "powershell -ExecutionPolicy Bypass -File ./scripts/test-dev.ps1 -TestSuite blog -Headed",
    "e2e:dev:contact": "powershell -ExecutionPolicy Bypass -File ./scripts/test-dev.ps1 -TestSuite contact -Headed",
    "e2e:dev:workflows": "powershell -ExecutionPolicy Bypass -File ./scripts/test-dev.ps1 -TestSuite workflows -Headed",
    "e2e:install": "playwright install",
    "e2e:report": "playwright show-report",
    "test:runner": "node scripts/test-runner.js",
    "test:check": "node scripts/test-runner.js check",
    "test:all": "node scripts/test-runner.js all"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.15.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "next": "^14.2.33",
    "next-auth": "^4.24.7",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.56.0",
    "postcss": "^8",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.15.7",
    "typescript": "^5"
  }
}
